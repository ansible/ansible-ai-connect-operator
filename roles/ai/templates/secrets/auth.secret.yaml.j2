# Authentication Secret.
---
apiVersion: v1
kind: Secret
metadata:
  name: '{{ ansible_operator_meta.name }}-auth-configuration'
  namespace: '{{ ansible_operator_meta.namespace }}'
  labels:
    app.kubernetes.io/name: '{{ ansible_operator_meta.name }}'
    app.kubernetes.io/part-of: '{{ ansible_operator_meta.name }}'
    app.kubernetes.io/managed-by: '{{ deployment_type }}-operator'
    app.kubernetes.io/component: '{{ deployment_type }}'
    app.kubernetes.io/operator-version: '{{ lookup("env", "OPERATOR_VERSION") }}'
stringData:
  aap_api_url: '{{ combined_auth.aap_api_url }}'
  social_auth_aap_key: '{{ combined_auth.social_auth_aap_key }}'
  social_auth_aap_secret: '{{ combined_auth.social_auth_aap_secret }}'
  social_auth_verify_ssl: '{{ combined_auth.social_auth_verify_ssl }}'
  ansible_wisdom_domain: '{{ combined_auth.ansible_wisdom_domain }}'
